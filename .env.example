# 股票分析系统环境配置
# 请复制此文件为 .env 并填写相应的配置值

# =================
# 数据源配置
# =================

# Tushare Pro Token (必需)
# 请访问 https://tushare.pro 注册并获取token
TUSHARE_TOKEN=your_tushare_token_here

# AKShare配置 (可选)
AKSHARE_ENABLED=false

# =================
# 数据库配置
# =================

# 数据库类型 (默认使用SQLite)
DB_TYPE=sqlite
DB_PATH=data/stock_analysis.db

# MySQL配置 (如果需要使用MySQL)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=stock_analysis
# DB_USER=root
# DB_PASSWORD=your_password

# =================
# Web服务配置
# =================

# Flask密钥
SECRET_KEY=your_secret_key_here_change_in_production

# Web服务配置
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_DEBUG=false

# =================
# 推送通知配置 (可选)
# =================

# Pushbullet推送通知
PUSHBULLET_TOKEN=your_pushbullet_token

# 企业微信推送 (可选)
WECHAT_WEBHOOK_URL=

# 钉钉推送 (可选)
DINGTALK_WEBHOOK_URL=

# =================
# 缓存配置 (可选)
# =================

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================
# 日志配置
# =================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE=logs/stock_analysis.log

# =================
# 安全配置
# =================

# API访问密钥 (可选，用于API鉴权)
API_KEY=your_api_key_here

# 允许的IP地址 (逗号分隔，留空表示允许所有)
ALLOWED_IPS=

# =================
# 其他配置
# =================

# 时区设置
TZ=Asia/Shanghai

# 数据更新间隔 (秒)
UPDATE_INTERVAL=300

# 最大并发数据获取任务
MAX_CONCURRENT_TASKS=5